		"program": "${workspaceFolder}/build/test/Test_example",
		"args": [],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
			{
				"description": "为 gdb 启用整齐打印",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			}
		]
	},
	{
		"name": "Windows Unit Testing",
		"type": "cppvsdbg",
		"request": "launch",
		"program": "${workspaceFolder}/build/test/Test_example.exe",
